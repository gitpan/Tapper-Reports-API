#! /usr/bin/env perl

use strict;
use warnings;

use Tapper::Reports::API;

my $EUID = `id -u`; chomp $EUID;
my $EGID = `id -g`; chomp $EGID;

Tapper::Reports::API->run(
                           port         => 7358,
                           log_level    => 2,
                           max_servers  => 2,
                           max_requests => 2,
                           user         => $EUID,
                           group        => $EGID,
                          );
